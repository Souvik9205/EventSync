generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  imgURL    String? 

  events    Event[]  @relation("UserEvents")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Event {
  id          String        @id @default(cuid())
  name        String
  description String
  organization String
  orgImgURL    String       
  dateTime    DateTime
  location    String
  createdBy   User      @relation("UserEvents", fields: [createdById], references: [id])
  createdById String
  customFields CustomField[]
  attendees   Attendance[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model CustomField {
  id        String    @id @default(cuid())
  eventId   String
  fieldName String
  fieldType String  
  Event     Event  @relation(fields: [eventId], references: [id])
}

model Attendance {
  id        String      @id @default(cuid())
  user      String
  eventId   String
  timestamp DateTime @default(now())
  fields    Json    

  Event     Event    @relation(fields: [eventId], references: [id])
}